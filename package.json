{
  "name": "arigo-datetime-picker",
  "version": "0.0.1",
  "description": "Simple date-time-picker based on vaadin-components",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git@github.com:stefanfrede/arigo-datetimepicker.git"
  },
  "keywords": [
    "Arigo",
    "date-time-picker",
    "datetime-picker",
    "web-component",
    "web-components",
    "polymer"
  ],
  "author": "Stefan Frede <public@frede.biz>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/stefanfrede/arigo-datetimepicker/issues"
  },
  "homepage": "https://github.com/stefanfrede/arigo-datetimepicker#readme",
  "browserslist": [
    "last 2 versions"
  ],
  "lint-staged": {
    "src/**/*.html": [
      "stylelint --fix",
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
